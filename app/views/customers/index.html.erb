<h1>Clientes</h1>
<%= link_to "← Voltar", root_path %> |
<%= link_to "New Customer", new_customer_path %>

<table border="1">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Assinaturas</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.age %> anos</td>
        <td><%= customer.subscriptions.count %> assinatura(s)</td>
        <td>
          <%= link_to "View", customer_path(customer) %> |
          <%= link_to "Edit", edit_customer_path(customer) %> |
          <%= link_to "Delete", customer_path(customer), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>